<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scan">

    <ImageView
        android:id="@+id/mPhotoImageView"
        android:layout_width="277dp"
        android:layout_height="341dp"
        android:layout_marginTop="152dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/automn" />

    <Button
        android:id="@+id/select"
        android:layout_width="182dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#234324"
        android:text="Select Photo"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/detect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mPhotoImageView"
        app:layout_constraintVertical_bias="0.618" />

    <Button
        android:id="@+id/cam"
        android:layout_width="182dp"
        android:layout_height="58dp"
        android:backgroundTint="#234324"
        android:text="Start Camera"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/detect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toEndOf="@+id/select"
        app:layout_constraintTop_toBottomOf="@+id/mPhotoImageView"
        app:layout_constraintVertical_bias="0.618" />

    <Button
        android:id="@+id/detect"
        android:layout_width="395dp"
        android:layout_height="64dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#234324"
        android:text="Diagnose Plant Disease"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Plant Doctor"
        android:textColor="#234324"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>